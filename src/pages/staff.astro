---
import Layout from "../layouts/Layout.astro";
import TableStaff from "../components/React-components/Staff/TableStaff";
import InfoStaff from "../components/React-components/Staff/InfoStaff";
---

<Layout title="Personal">
  <section class="h-full">
    <div class="grid grid-cols-[43%_1fr] gap-4 h-full">
      <div class="h-full flex flex-col">
        <TableStaff client:load />
      </div>

      <div class="flex flex-col">
        <div class="h-full mb-3">
          <InfoStaff client:load />
        </div>
      </div>
    </div>
  </section>
</Layout>

